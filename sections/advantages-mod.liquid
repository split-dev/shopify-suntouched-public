<section class="advantages-mod {% if section.settings.enable-buttons %}advantages__bg{% endif %}" >
  <div class="container">
    <h2 class="h1 mt-0 text-center color-text">{{ section.settings.title }}</h2>
    <div class="advantages-mod__wrapper d-flex flex-wrap justify-content-center">
      {% for block in section.blocks %}
        {% if block.settings.img %}
          <div class="advantages-mod__tile-box d-flex justify-content-center">
            <div class="advantages-mod__tile">
              <div class="advantages-mod__tile-hover">
                <img class="advantages-mod__img" loading="lazy" src="{{ block.settings.img | img_url: '90x' }}" alt="{{ block.settings.img.alt }}">
                {% if block.settings.hover-img %}
                  <img class="advantages-mod__hover-img" loading="lazy" src="{{ block.settings.hover-img | img_url: '90x' }}" alt="{{ block.settings.hover-img.alt }}">
                {% else %}
                  <img class="advantages-mod__hover-img" loading="lazy" src="{{ block.settings.img | img_url: '90x' }}" alt="{{ block.settings.img.alt }}">
                {% endif %}
              </div>
              <p class="text-center color-text">{{ block.settings.text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.link_text != blank %}
      <div class="d-flex justify-content-center">
        <a class="button__gold advantages-mod__btn text-decoration-none" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
  "name": "Advantages Modification",
  "settings": [
        {
          "type": "checkbox",
          "id": "enable-buttons",
          "default": false,
          "label": "Background"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        }
    ],
    "blocks": [
      {
      "name": "Item",
      "type": "text",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "hover-img",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
    ]
    }
  ],
  "presets": [
    {
      "name": "Advantages Modification",
      "category": "New"
    }
  ]
  }
{% endschema %}