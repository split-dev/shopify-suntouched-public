<style>
  .cta {
    background-image: url('{{ section.settings.img-desktop | img_url: 'master' }}');
  }
  @media (max-width: 767px) {
    .cta {
      background-image: url('{{ section.settings.img-mobile | img_url: 'master' }}');
    }
  }
</style>

<div class="cta">
  <div class="container">
    <div class="cta__wrapper">
      <div class="cta__info d-flex flex-column align-items-center justify-content-center">
        {% if section.settings.title %}
          <h2 class="mt-0 text-center">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        <div class="d-flex justify-content-center">
          <a class="button__gold" href="{{ section.settings.url }}">{{ section.settings.label }}</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
  "name": "CTA",
  "settings": [
  {
    "type": "image_picker",
    "id": "img-desktop",
    "label": "BG desktop"
  },
  {
    "type": "image_picker",
    "id": "img-mobile",
    "label": "BG mobile"
  },
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  },
  {
    "type": "url",
    "id": "url",
    "label": "URL Button"
  },
  {
    "type": "text",
    "id": "label",
    "label": "Text Button",
    "default": "view our products"
  }
  ],
  "presets": [
  {
    "name": "CTA",
    "category": "New"
  }
  ]
  }
{% endschema %}