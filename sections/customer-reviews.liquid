<section class="customer-reviews" >
  <div class="container">
    <div class="customer-reviews__wrapper">
      <h2 class="h1 mt-0 text-center color-text">{{ section.settings.title }}</h2>
    </div>

    <div>
      {% render 'judgeme_widgets', widget_type: 'judgeme_review_widget', concierge_install: false, product: product %}
    </div>
  </div>
</section>

{% schema %}
  {
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
  {
  "name": "Customer Reviews",
  "category": "New"
  }
  ]
  }
{% endschema %}